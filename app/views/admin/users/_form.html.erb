<%= simple_form_for([:admin, user]) do |f| %>  
  <div class="field">
    <div class="control">
      <%= f.input :email, input_html: { class: "input"},
                  wrapper: false, label_html: { class: "label" } %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.input :password, input_html: { class: "input"},
                  wrapper: false, label_html: { class: "label"} %>     
    </div>
  </div>

  <div class="field">
    <div class="control">      
      <%= f.input :admin, input_html: { class: "checkbox"},
                  wrapper: false, label_html: { class: "label" } %>
    </div>
  </div>

  <header>
    <h2 class="title">Roles</h2>    
  </header>  

  <% projects.each do |project| %> 
    
      <div class="field"> 
        <div class="control">
        <%= label_tag dom_id(project), project.name %>
        <%= select_tag dom_id(project), options_for_select(roles,
            user.role_on(project)), name: "roles[#{project.id}]",
            include_blank: true %>
  <% end %>
  <%= f.button :submit, class: "button is-primary is-rounded" %>
      </div>
    </div>
    
  
<% end %>