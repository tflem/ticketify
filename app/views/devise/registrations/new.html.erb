<header>
  <h1 class="title">Sign Up</h1>
</header>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="field">
    <div class="control">
      <%= f.input :email, required: true, autofocus: true, input_html: { class: "input" },
                  wrapper: false, label_html: { class: "label" } %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.input :password, required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { class: "input" }, wrapper: false, label_html: { class: "label" } %>
    </div>
  </div>
      
  <div class="field">
    <div class="control">
      <%= f.input :password_confirmation, required: true, input_html: { class: "input" },
                  wrapper: false, label_html: { class: "label" } %>
    </div>
  </div>
 
  <div class="form-actions">
    <%= f.button :submit, "Sign Up", class: "button is-primary is-rounded" %>
  </div>
<% end %>