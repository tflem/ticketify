<header>
  <h1 class="title">Edit <%= resource_name.to_s.humanize %></h1>
</header>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  
  <div class="field">
    <div class="control">
      <%= f.input :email, required: true, autofocus: true,  input_html: { class: "input" },
                  wrapper: false, label_html: { class: "label" } %>
    </div>
  </div>    

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <div class="field">
      <div class="control">
        <%= f.input :password, autocomplete: "off", hint: "Leave blank if you don't want to change it",
                    required: false,  input_html: { class: "input" },
                    wrapper: false, label_html: { class: "label" } %>
      </div>
    </div>

    <div class="field">
      <div class="control">      
        <%= f.input :password_confirmation, required: false,  input_html: { class: "input" },
                    wrapper: false, label_html: { class: "label" } %>
      </div>
    </div>

    <div class="field">
      <div class="control">   
        <%= f.input :current_password, hint: "Current password is needed to confirm changes",
                    required: true,  input_html: { class: "input" },
                    wrapper: false, label_html: { class: "label" } %>
      </div>
    </div>

  <div class="form-actions">
    <%= f.button :submit, "Update", class: "button is-primary is-rounded" %>
  </div>
<% end %>

<h3>Cancel Account</h3>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
