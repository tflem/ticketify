<header>
  <h1 class="title">Resend Unlock Instructions</h1>
</header>

<%= simple_form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.full_error :unlock_token %>

  <div class="field">
    <div class="control">   
      <%= f.input :email, required: true, autofocus: true, input_html: { class: "input" },
                  wrapper: false, label_html: { class: "label" } %>
    </div>
  <div>

  <div class="form-actions">
    <%= f.button :submit, "Resend Unlock Instructions", class: "button is-primary is-rounded" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
