<header>
  <h1 class="title">Change Your Password</h1>
</header>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  
  <div class="field">
    <div class="control">
      <%= f.input :reset_password_token, as: :hidden, %>
      <%= f.full_error :reset_password_token %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.input :password, label: "New password", required: true,
                  input_html: { class: "input" },
                  wrapper: false, label_html: { class: "label" },
                  autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.input :password_confirmation, label: "Confirm New Password", required: true %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Change My Password", class: "button is-primary is-rounded" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
