<header>
  <h1 class="title">Log In</h1>
</header>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <div class="control">
      <%= f.input :email, required: false, autofocus: true, input_html: { class: "input" },
                  wrapper: false, label_html: { class: "label" } %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.input :password, required: false, input_html: { class: "input" },
                  wrapper: false, label_html: { class: "label" } %>      
    </div>
  </div> 
  
  <div class="field">
    <div class="control"> 
      <%= f.input :remember_me, wrapper: false, input_html: { class: "checkbox" },                   
                  as: :boolean if devise_mapping.rememberable? %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log In", class: "button is-primary is-rounded" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
