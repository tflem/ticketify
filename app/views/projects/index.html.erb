<div class="title">
  <h1>Your Projects</h1>
</div>

<div>
  <ul class="actions">
    <li><%= link_to "New Project", new_project_path, class: "button is-primary is-large" %></li>
  </ul>
</div>

<div id="projects">
  <% @projects.each do |project| %>
    <h2><%= link_to project.name, project %></h2>
    <p><%= project.description %></p>
  <% end %>
</div>