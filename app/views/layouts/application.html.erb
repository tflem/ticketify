<!DOCTYPE html>
<html>
  <head>
    <title>
      <% if content_for? (:title) %>
        <%= yield(:title) %>
      <% else %>
        Ticketify
      <% end %>
    </title>      

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <nav class="navbar is-dark is-inverted" role="navigation" aria-label="main navigation">  
    <div class="navbar-brand">
      <%= link_to "Ticketify", root_path, class: "navbar-item" %>
        
        <div class="navbar-burger is-active" data-target="navMenu" aria-label="menu" aria-expanded="false">
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
        </div>
    </div>    

   <div id="navMenu" class="navbar-menu is-active">    
     <div class="navbar-start">      
       <%= link_to icon("fas", "home", "Home"),
         root_path, class: "navbar-item is-active" if current_page?("/") %>  
      </div>
    </div>
  </nav>

    <div class="container">      
        <% flash.each do |key, message| %>
          <div class="notification notification-<%= key %>">
            <%= message %>
          </div>     
        <% end %>
      <%= yield %>    
    </div>
  </body>
</html>