<!DOCTYPE html>
<html>
  <head>
    <title>
      <% if content_for? (:title) %>
        <%= yield(:title) %>
      <% else %>
        Ticketify
      <% end %>
    </title>      

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
    <% flash.each do |key, message| %>
      <div><%= message %></div>
    <% end %>
    <%= yield %>
    </div>
  </body>
</html>
