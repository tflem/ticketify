<%= simple_form_for([project, ticket]) do |f| %>
  <div class="field">
    <div class="control">
      <%= f.input :name, input_html: { class: "input" },
                  wrapper: false, label_html: { class: "label" } %>
      <%= f.input :description, input_html: { class: "input" },
                  wrapper: false, label_html: { class: "label" } %>
    </div>
  </div>

  <%= f.button :submit, class: "button is-primary is-rounded" %>
<% end %>